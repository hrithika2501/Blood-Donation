  <section class="main">
    <div class="container py-5">
      
        
          <div class="card py-3 px-3 update">
            <div class="card-body text-center">
              <h2 class="font-weight-light register">Update details</h2>
              <br>
              <form class=""
                action="<%=(typeof editData!='undefined')?'/admin/camps/donors/edit/'+editData.D_id:'/admin/create'%>"
                method="POST">
                <div class="form">
                  <input type="text" class="form-control paras" placeholder="First name" name="f_name" required
                    value="<%=(typeof editData!='undefined')? editData.f_name:''%>">
                  <input type="text" class="form-control my-3 paras" placeholder="Last Name" name="l_name" required
                    value="<%=(typeof editData!='undefined')? editData.l_name:''%>">
                  <input type="email" class="form-control paras" placeholder="Email-id" name="email_id"
                    aria-describedby="emailHelpBox" required
                    value="<%=(typeof editData!='undefined')? editData.email_id:''%>">
                  <input type="text" class="form-control paras my-3" placeholder="Address" name="address" required
                    value="<%=(typeof editData!='undefined')? editData.address:''%>">
                  <input type="text" class="form-control my-3 paras" placeholder="City" name="city" required
                    value="<%=(typeof editData!='undefined')? editData.city:''%>">
                  <input type="text" class="form-control paras" placeholder="Pincode" name="pincode" required
                    value="<%=(typeof editData!='undefined')? editData.pincode:''%>">
                  <input type="text" class="form-control my-3 paras" placeholder="State" name="state" required
                    value="<%=(typeof editData!='undefined')? editData.state:''%>">

                  <input class="form-control my-3 paras" placeholder="Mobile No." pattern="[0-9]{10}" name="mobile_no"
                    required value="<%=(typeof editData!='undefined')? editData.mobile_no:''%>">

                  <div class="form-group form-check">
                    <button class="btn btn-dark btn-sm my-3 form-control paras" type="submit">Submit</button>
                  </div>
                </div>
              </form>

            </div>
          </div>
        
      
    </div>
