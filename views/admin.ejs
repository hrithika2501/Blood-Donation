  <div class="main">
    
    <center>
    <div class="input-group" id="branch-dropdown">
      <form action="/chart" method="POST">
      <select
        class="custom-select w-10 btn btn-lg  branch"
        id="inputGroupSelect04"
        name="state"
      >
        <option selected>State</option>
            <option value="Maharashtra" >Maharashtra</option>
            <option value="Gujarat">Gujarat</option>
            <option value="Tamil Nadu">Tamil Nadu</option>
            <option value="Karnataka">Karnataka</option>
            <option value="Delhi">Delhi</option>
            <option value="Goa">Goa</option>
            <option value="Haryana">Haryana</option>
            <option value="Uttarakhand">Uttarakhand</option>
      </select>
      <div class="input-group-append down">
        <button class="btn btn-outline-danger" name="chart" value="chart" type="submit" style="margin-top: 5px;">
          Chart
        </button>
      </form>
      </div>
    </div>
    </center>   
    <div class="card2">
      <table class="table table-hover" class="table table-borderless">

        <tbody>
          <tr>
            <th scope="col" class="text-center">ID</th>
            <th scope="col" class="text-center">First Name</th>
            <th scope="col" class="text-center">Last Name</th>
            <th scope="col" class="text-center">Email</td>
            <th scope="col" class="text-center">Gender</td>
            <th scope="col" class="text-center">Age</td>
            <th scope="col" class="text-center">Address</td>
            <th scope="col" class="text-center">City</td>
            <th scope="col" class="text-center">Pincode</td>
            <th scope="col" class="text-center">State</td>
            <th scope="col" class="text-center">Country</td>
            <th scope="col" class="text-center">Blood_Grp</td>
            <th scope="col" class="text-center">Mobile</td>
            <th scope="col" class="text-center">Status</td>
            <th scope="col" class="text-center">Delete</td>
            <th scope="col" class="text-center">Edit</td>
          </tr>

          </tr>

          <% print.forEach(function(user){ %>
          <tr>
            <td class="text-center" class="damn_border">
              <%= user.id %>
            </td>
            <td class="text-center" class="damn_border">
              <%= user.fname %>
            </td>
            <td class="text-center" class="damn_border">
              <%= user.lname %>
            </td>
            <td class="text-center" class="damn_border">
              <%= user.email %>
            </td>
            <td class="text-center" class="damn_border">
              <%= user.gender %>
            </td>
            <td class="text-center" class="damn_border">
              <%= user.age %>
            </td>
            <td class="text-center" class="damn_border">
              <%= user.address %>
            </td>
            <td class="text-center" class="damn_border">
              <%= user.city %>
            </td>
            <td class="text-center" class="damn_border">
              <%= user.pincode %>
            </td>
            <td class="text-center" class="damn_border">
              <%= user.state %>
            </td>
            <td class="text-center" class="damn_border">
              <%= user.country %>
            </td>
            <% if(user.bloodtype==1) { %>
            <td class="text-center" class="damn_border"> A+ve</td>
            <% } else if(user.bloodtype==2){ %>
            <td class="text-center" class="damn_border"> A-ve</td>
            <% } else if(user.bloodtype==3){ %>
            <td class="text-center" class="damn_border"> B+ve</td>
            <% } else if(user.bloodtype==4){ %>
            <td class="text-center" class="damn_border"> B-ve</td>
            <% } else if(user.bloodtype==5){ %>
            <td class="text-center" class="damn_border"> AB+ve</td>
            <% } else if(user.bloodtype==6){ %>
            <td class="text-center" class="damn_border"> AB-ve</td>
            <% } else if(user.bloodtype==7 ){ %>
            <td class="text-center" class="damn_border"> O+ve</td>
            <% } else { %>
            <td class="text-center" class="damn_border"> O-ve</td>
            <% } %>
            <td class="text-center" class="damn_border">
              <%= user.phone %>
            </td>
            <td class="text-center" class="damn_border">
              <%= user.verification_status%>
            </td>
            <td class="text-center" class="damn_border"><a href="/admin/delete/<%=user.id%>"><i
                  class="fas fa-trash"></i></a></td>
            <td class="text-center" class="damn_border"><a href="/admin/edit/<%=user.id%>"><i
                  class="far fa-edit"></i></a></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
