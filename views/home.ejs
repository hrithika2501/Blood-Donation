            </div>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item paras active">
                    <a class="nav-link" href="/home">PROFILE</a>
                </li>
                <% if (!!req.session.loggedin) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/login/logout">LOGOUT</a>
                    </li>
                    <% } else{ %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">LOGIN</a>
                        </li>
                        <% } %>
            </ul>
        </div>

    </nav>
    <div class="main">
        <div class="card-profile">
            <div class="container py-5">
                <div class="row first_row">
                    <div class="col-lg-5 offset-1 col-md-11 col-sm-11 col-11">
                        <div class="card py-3 px-3 update">
                            <div class="card-body text-center">
                                <h2 class="font-weight-light register">Update profile</h2>
                                <br>
                                <form class="form-container1"
                                    action="<%=(typeof editData!='undefined')?'/admin/camps/donors/edit/'+editData.D_id:'/admin/create'%>"
                                    method="POST">
                                    <div class="form">
                                        <input type="text" class="form-control paras" placeholder="First name"
                                            name="fname">
                                        <input type="text" class="form-control my-3 paras" placeholder="Last Name"
                                            name="lname">
                                        <input type="email" class="form-control paras" placeholder="Email-id"
                                            name="email" aria-describedby="emailHelpBox">
                                        <small id="emailHelpBox" class="form-text text-muted text-left paras">
                                            This will be your username.
                                        </small>
                                        <input type="number" class="form-control paras" placeholder="Age" name="age"
                                            required> <br>
                                        <input type="text" class="form-control paras" placeholder="Address"
                                            name="address_1" required>
                                        <input type="text" class="form-control my-3 paras" placeholder="City"
                                            name="address_2" required>
                                        <input type="text" class="form-control paras" placeholder="Pincode"
                                            name="address_3" required>
                                        <input type="text" class="form-control my-3 paras" placeholder="State"
                                            name="address_4" required>
                                        <input type="text" class="form-control paras" placeholder="Country"
                                            name="address_5" required>
                                        <input class="form-control my-3 paras" placeholder="Mobile No."
                                            pattern="[0-9]{10}" name="phone" required>
                                        <input class="form-control my-3 paras" placeholder="Aadhar Number"
                                            pattern="[0-9]{12}" name="aadhar_number" required>
                                        <div class="form-group form-check">
                                            <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
                                            <label class="form-check-label paras" for="exampleCheck1">I agree to the
                                                terms and conditions</label>
                                            <button class="btn btn-dark btn-sm my-3 form-control paras" name="submit"
                                                type="submit"> Register </button>
                                            <p paras>By registering you <strong>agree</strong> to give us permission to
                                                display your details on our site.</p>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <% if (message.length> 0) { %>
                <div class="alert alert-danger col-sm-12">
                    <%= message %>
                </div>
                <% } %>

        </div>
    </div>

