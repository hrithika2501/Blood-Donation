                        </div>

                    </div>
                    <div style="margin-top: -140px;"> 

                        <% if (msg.length> 0) { %>
                        <div style="float: left; padding-bottom: 5px; padding-top: 10px;">
                            <%= msg %>
                        </div>
                        <% } %>
                        </form>
                        <form class="form-container" action="/register/verify" method="POST">

                            <input pattern="[0-9]{6}" class="form-control fontt" placeholder="Enter the otp here"
                                name="otp">
                            <div class="form-group form-check my-3">
                                <button type="submit" class="btn btn-dark btn-sm my-3 form-control fontt"
                                    name="verify">Verify</button>
                            </div>
                        </form>
                        <form action="/register/resend" method="POST">
                            <p class="fontt">
                                <%= msg1 %>
                            </p>
                            <div class="form-group form-check my-3">
                                <button type="submit" class="btn btn-dark btn-sm my-3 form-control fontt">Resend
                                    otp</button>
                            </div>
                        </form>

