  <!-- Main Body -->

  <section class="main">
    <div class="container py-5">
      <div class="row first_row">

        <div>
          <div class="card py-3 px-3">
            <div class="card-body text-center">
              <h2 class="font-weight-light registerfad heading">Find a Donor</h2>

              <form action="/fad" method="post" class="">

                <div class="form">
                  <select class="custom-select my-3 form-control" name="bloodgroup" required>
                    <option class="paras">Blood Group</option>
                    <option value="1">A+ve</option>
                    <option value="2">A-ve</option>
                    <option value="3">B+ve</option>
                    <option value="4">B-ve</option>
                    <option value="5">AB+ve</option>
                    <option value="6">AB-ve</option>
                    <option value="7">O+ve</option>
                    <option value="8">O-ve</option>
                  </select>
                  <select class="custom-select form-control" name="compo" required>
                    <option class="paras">Component of blood</option>
                    <option value="1">Whole blood</option>
                    <option value="2">Red blood cells</option>
                    <option value="3">Plasma</option>
                    <option value="4">Platelets</option>
                  </select>
                  <input type="text" class="form-control my-3 paras" placeholder="City" name="city" required>
                  <input type="text" class="form-control my-3 paras" placeholder="State" name="state" required>
                  <input type="text" class="form-control my-3 paras" placeholder="Country" name="country" required>
                  <button class="btn btn-dark btn-sm my-3 form-control paras fadbutton" name="find" value="find"
                    type="submit"> Find </button>
                </div>
            </div>
            </form>

          </div>
        </div>
      </div>
    </div>
    </div>

    <!-- Donor table -->
    <div class="card2">
      <center><h2>Donors</h2></center>
      <table class="table table-hover damn_border">

        <tbody>
          <tr>
            <th scope="col" class="text-center damn_border">First Name</th>
            <th scope="col" class="text-center damn_border">Last name</th>
            <th scope="col" class="text-center damn_border">Gender</th>
            <th scope="col" class="text-center damn_border">Age</th>
            <th scope="col" class="text-center damn_border">Blood Group</th>
            <th scope="col" class="text-center damn_border">Email</th>
            <th scope="col" class="text-center damn_border">Mobile number</th>
            <th scope="col" class="text-center damn_border">Address</th>
            <th scope="col" class="text-center damn_border">City</th>
            <th scope="col" class="text-center damn_border">Pin Code</th>
            <th scope="col" class="text-center damn_border">State</th>
            <th scope="col" class="text-center damn_border">Country</th>
            <th scope="col" class="text-center damn_border">Ping</th>
          </tr>
          <% if(fin==='find' ) { %>
            <% donor.forEach(function(dono){ %>
              <tr>
                <td class="damn_border">
                  <%= dono.fname%>
                </td>
                <td class="damn_border">
                  <%= dono.lname%>
                </td>
                <td class="damn_border">
                  <%= dono.gender%>
                </td>
                <td class="damn_border">
                  <%= dono.age%>
                </td>
                <td class="damn_border">
                  <%= dono.blood_group%>
                </td>
                <td class="damn_border">
                  <%= dono.email%>
                </td>
                <td class="damn_border">
                  <%= dono.phone%>
                </td>
                <td class="damn_border">
                  <%= dono.address%>
                </td>
                <td class="damn_border">
                  <%= dono.city%>
                </td>
                <td class="damn_border">
                  <%= dono.pincode%>
                </td>
                <td class="damn_border">
                  <%= dono.state%>
                </td>
                <td class="damn_border">
                  <%= dono.country%>
                </td>
                <td class="text-center damn_border"><a href="/fad/sendmsg/<%=dono.phone%>"><i
                  class="fas fa-envelope"></i></a></td>
              </tr>
              <% }); %>
                <% } %>
        </tbody>
      </table>
    </div>

    <!-- Blood bank and hospitals -->
    <div class="card2">
      <center><h2>Blood banks and hospitals</h2></center>

      <table class="table table-hover damn_border">

        <tbody>
          <tr>
            <th scope="col" class="text-center damn_border">Name</th>
            <th scope="col" class="text-center damn_border">Email</th>
            <th scope="col" class="text-center damn_border">Blood Group</th>
            <th scope="col" class="text-center damn_border">Mobile number</th>
            <th scope="col" class="text-center damn_border">Address</th>
            <th scope="col" class="text-center damn_border">City</th>
            <th scope="col" class="text-center damn_border">Pin Code</th>
            <th scope="col" class="text-center damn_border">State</th>
          </tr>
          <% if(fin==='find' ) { %>
            <% console.log(date); %>
              <% bank.forEach(function(banks,index){ %>
                <% var expiry=new Date(bank[index]['expiry']); %>
                  <% console.log(expiry); %>
                    <% if ((date.getDate()>= expiry.getDate()) || (date.getDate() === expiry.getDate() && date.getTime()
                      >= expiry.getTime())){ %>
                      <% console.log("Expired"); %>
                        <% return %>
                          <% } %>
                            <tr>
                              <td class="damn_border">
                                <%= banks.name%>
                              </td>
                              <td class="damn_border">
                                <%= banks.email%>
                              </td>
                              <td class="damn_border">
                                <%= banks.blood_group%>
                              </td>
                              <td class="damn_border">
                                <%= banks.contact%>
                              </td>
                              <td class="damn_border">
                                <%= banks.address%>
                              </td>
                              <td class="damn_border">
                                <%= banks.city%>
                              </td>
                              <td class="damn_border">
                                <%= banks.pincode%>
                              </td>
                              <td class="damn_border">
                                <%= banks.state%>
                              </td>
                            </tr>

                            <% }); %>
                              <% } %>
        </tbody>
      </table>
    </div>
