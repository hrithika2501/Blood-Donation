    <section class="main">
        <div class="container py-5">
            <div class="row first_row">
                <div class="col-lg-5 text-black offset-1 col-md-11 col-sm-11 col-11 first_column">
                    <div class="row">
                        <div class="col-lg-2 col-md-2 col-sm-2 col-2">
                            <span><i class="fas fa-users"></i></span>

                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-10 col-10">
                            <h3 class="font-weight-strong heading">Who can register?</h3>
                            <p class="font-weight-strong pb-5 paras">
                                You can register if you fall in any of these two categories:<br>
                                1. Donor : Is willing to donate blood and save someones's life! <br>
                                2. Recipient : Is in need of blood for self or close one's.
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2 col-md-2 col-sm-2 col-2">
                            <span><i class="fas fa-heartbeat"></i></span>

                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-10 col-10">
                            <h3 class="font-weight-strong heading">Why register?</h3>
                            <p class="font-weight-strong pb-5 paras">
                                By registering you can either donate blood and save others lives or also request blood
                                when
                                you are in need.<br>
                                It also helps us keep track of our users and their data.
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2 col-md-2 col-sm-2 col-2">
                            <span><i class="fas fa-user-secret"></i></span>

                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-10 col-10">
                            <h3 class="font-weight-strong heading">Security of your info</h3>
                            <p class="font-weight-strong pb-5 paras">
                                We respect your privacy.<br>We will never rent, sell or give away your personal details
                                to
                                any third party.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-5 offset-1 col-md-11 col-sm-11 col-11">
                    <div class="card py-3 px-3 register">
                        <div class="card-body text-center">
                            <h2 class="font-weight-light register">Register</h2>
                            <div class="form">
                                <div class="head" class="signup">
                                    <div onclick="changeTab(this)" data-tab="login" class="login-tab">User</div>
                                    <div onclick="changeTab(this)" data-tab="signup" class="signup-tab">Hospital</div>
                                </div>
                                <div class="body" id="form-body">

                                    <div class="login">
                                        <form class="form-container" action="/register/send" method="POST">



                                            <input type="text" class="form-control paras" placeholder="First name"
                                                name="fname">
                                            <input type="text" class="form-control my-3 paras" placeholder="Last Name"
                                                name="lname">
                                            <input type="email" class="form-control paras" placeholder="Email-id"
                                                name="email" aria-describedby="emailHelpBox">
                                            <small id="emailHelpBox" class="form-text text-muted text-left paras">
                                                This will be your username.
                                            </small>
                                            <input type="password" class="form-control my-3 paras"
                                                placeholder="Password" name="password"
                                                aria-describedby="passwordHelpBox">
                                            <small id="passwordHelpBlock"
                                                class="form-text text-muted text-left my-3 paras">
                                                Your password must be 8-20 characters long, contain letters and
                                                numbers, and must not contain spaces,
                                                special characters, or emoji.
                                            </small>
                                            <input type="password" class="form-control paras"
                                                placeholder="Confirm Password" name="password2">
                                            <div class="form-check-inline text-left paras">
                                                <label class="form-check-label my-3 text-left paras">Gender</label>
                                            </div>
                                            <div class="form-check-inline">
                                                <label class="form-check-label">
                                                    <input type="radio" class="form-check-input my-3 paras"
                                                        name="optradio" value="M">Male
                                                </label>
                                            </div>
                                            <div class="form-check-inline">
                                                <label class="form-check-label">
                                                    <input type="radio" class="form-check-input my-3 paras"
                                                        name="optradio" value="F">Female
                                                </label>
                                            </div>
                                            <input type="number" class="form-control paras" placeholder="Age" name="age"
                                                required>
                                            <select name="blood_group" class="custom-select my-3 form-control paras">
                                                <option selected>Blood Group</option>
                                                <option value="1">A+ve</option>
                                                <option value="2">A-ve</option>
                                                <option value="3">B+ve</option>
                                                <option value="4">B-ve</option>
                                                <option value="5">AB+ve</option>
                                                <option value="6">AB-ve</option>
                                                <option value="7">O+ve</option>
                                                <option value="8">O-ve</option>
                                            </select>
                                            <input type="text" class="form-control paras" placeholder="Address"
                                                name="address_1" required>
                                            <input type="text" class="form-control my-3 paras" placeholder="City"
                                                name="address_2" required>
                                            <input type="text" class="form-control paras" placeholder="Pincode"
                                                name="address_3" required>
                                            <input type="text" class="form-control my-3 paras" placeholder="State"
                                                name="address_4" required>
                                            <input type="text" class="form-control paras" placeholder="Country"
                                                name="address_5" required>
                                            <input class="form-control my-3 paras" placeholder="Mobile No."
                                                pattern="[0-9]{10}" name="phone" required>
                                            <input class="form-control my-3 paras" placeholder="Aadhar Number"
                                                pattern="[0-9]{12}" name="aadhar_number" required>
                                            <div class="form-group form-check">

                                                <input type="checkbox" class="form-check-input" id="exampleCheck1"
                                                    required>
                                                <label class="form-check-label paras" for="exampleCheck1">I agree to
                                                    the terms and conditions</label>
                                                <button class="btn btn-dark btn-sm my-3 form-control paras"
                                                    name="submit" value="user" type="submit"> Register
                                                </button>
                                                <p paras>By registering you <strong>agree</strong> to give us
                                                    permission to display your details on our
                                                    site.</p>
                                            </div>

                                        </form>
                                    </div>
                                    <div class="signup ">
                                        <form class="form-container1" action="/register/send1" method="POST">



                                            <input type="text" class="form-control my-3 paras" placeholder="Name"
                                                name="fname">

                                            <input type="email" class="form-control my-1 paras" placeholder="Email-id"
                                                name="email" aria-describedby="emailHelpBox">
                                            <small id="emailHelpBox" class="form-text text-muted text-left paras">
                                                This will be your username.
                                            </small>
                                            <input type="password" class="form-control my-3 paras"
                                                placeholder="Password" name="password"
                                                aria-describedby="passwordHelpBox">
                                            <small id="passwordHelpBlock"
                                                class="form-text text-muted text-left my-3 paras">
                                                Your password must be 8-20 characters long, contain letters and
                                                numbers, and must not contain spaces,
                                                special characters, or emoji.
                                            </small>
                                            <input type="password" class="form-control my-3 paras"
                                                placeholder="Confirm Password" name="password2">


                                            <input type="text" class="form-control paras" placeholder="Address"
                                                name="address_1" required>
                                            <input type="text" class="form-control my-3 paras" placeholder="City"
                                                name="address_2" required>
                                            <input type="text" class="form-control paras" placeholder="Pincode"
                                                name="address_3" required>
                                            <input type="text" class="form-control my-3 paras" placeholder="State"
                                                name="address_4" required>
                                            <input type="text" class="form-control paras" placeholder="Country"
                                                name="address_5" required>

                                            <input class="form-control my-3 paras" placeholder="Contact Number"
                                                pattern="[0-9]{10}" name="phone" required>


                                            <div class="form-group form-check">
                                                <input type="checkbox" class="form-check-input" id="exampleCheck1"
                                                    required>
                                                <label class="form-check-label paras" for="exampleCheck1">I
                                                    agree to
                                                    the terms and conditions</label>
                                                <button class="btn btn-dark btn-sm my-3 form-control paras"
                                                    name="submit" value="hospital" type="submit"> Register </button>
                                                <p paras>By registering you <strong>agree</strong> to give us
                                                    permission to display your details on our
                                                    site.</p>
                                            </div>

                                        </form>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>

    <script>
        function changeTab(ref) {
            try {
                if (ref.getAttribute("data-tab") == "login") {
                    document.getElementById("form-body").classList.remove('active');
                    ref.parentNode.classList.remove('signup');
                } else {
                    document.getElementById("form-body").classList.add('active');
                    ref.parentNode.classList.add('signup');
                }
            } catch (msg) {
                console.log(msg);
            }
        }
    </script>

