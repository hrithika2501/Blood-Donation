<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
        integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/b50b5c3588.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/form_style.css">
    <title>Dashboard</title>
</head>

<body>
    <!--Navigation-->
    <nav class="navbar navbar-expand-md navbar-light navbar-custom sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/index"><img src="/images/logo.png"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item ">
                        <a class="nav-link" href="/index">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/facts">FACTS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/fad">FIND</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/campsMain">CAMPS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact-us">CONTACT</a>
                    </li>
                </ul>
            </div>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">

                    <% if (!!req.session.loggedin) { %>
                        <li class="nav-item paras">
                            <a class="nav-link" href="/home">PROFILE</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/login/logout">LOGOUT</a>
                        </li>
                        <% } else{ %>
                            <li class="nav-item">
                                <a class="nav-link" href="/register">REGISTER</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/login">LOGIN</a>
                            </li>
                            <% } %>

                </ul>
            </div>
        </div>
    </nav>

    <section class="main">
        <div class="container py-5">


            <div class="card py-3 px-3 update">
                <div class="card-body text-center">
                    <h2 class="font-weight-light register">Volunteer</h2>
                    <br>
                    <form class="" action="/volunteer/create" method="POST">
                        <div class="form">
                            <input type="text" class="form-control paras" placeholder="First name" name="fName" required
                                value="">
                            <input type="text" class="form-control my-3 paras" placeholder="Last Name" name="lName"
                                required value="">
                            <input type="email" class="form-control paras" placeholder="Email-id" name="email_id"
                                aria-describedby="emailHelpBox" required value="">
                            <div>
                                <select class="custom-select my-3 form-control fontt" name="Camp">
                                    <option selected>Camp Name</option>
                                    <% comm.forEach(function(com){ %>

                                        <option value="<%=com.camp_id %>">
                                            <%=com.Camp_n %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <div class="form-check-inline text-left paras">
                                <label class="form-check-label my-3 text-left paras">Gender</label>
                            </div>
                            <div class="form-check-inline">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input my-3 paras" name="Gender" value="M">Male
                                </label>
                            </div>
                            <div class="form-check-inline">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input my-3 paras" name="Gender"
                                        value="F">Female
                                </label>
                            </div>
                            <input type="number" class="form-control paras" placeholder="Age" name="Age" value="age"
                                required>

                            <input type="text" class="form-control paras my-3" placeholder="Address" name="Address"
                                required value="">
                            <input type="text" class="form-control my-3 paras" placeholder="City" name="City" required
                                value="">
                            <input type="text" class="form-control paras" placeholder="Pincode" name="Pincode" required
                                value="">
                            <input type="text" class="form-control my-3 paras" placeholder="State" name="State" required
                                value="">

                            <input class="form-control my-3 paras" placeholder="Mobile No." pattern="[0-9]{10}"
                                name="Mobile_No" required value="">

                            <div class="form-group form-check">
                                <button class="btn btn-dark btn-sm my-3 form-control paras"
                                    type="submit">Submit</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>


        </div>
    </section>

    <!--Footer-->
    <footer>
        <div class="container-fluid padding foot">
            <div class="row text-center">
                <div class="col-md-4">
                    <img src="/images/rsz_raktadaan_logo.jpg">
                    <hr class="light">
                    <p class="paras">+91-9324040843</p>
                    <p class="paras">raktdan@gmail.com</p>
                    <p class="paras">A-5, Paradise, Godrej Hills</p>
                    <p class="paras">Kalyan,Thane,Maharashtra,India</p>
                </div>
                <div class="col-md-4">
                    <hr class="light">
                    <h5 class="paras">Offline Hours</h5>
                    <hr class="light">
                    <p class="paras">Monday: 8am-10pm</p>
                    <p class="paras">Saturday: 10am-4pm</p>
                    <p class="paras">Sunday: 10am-1pm</p>
                </div>
                <div class="col-md-4">
                    <hr class="light">
                    <h5 class="paras">Service Areas</h5>
                    <hr class="light">
                    <p class="paras">Mumbai, Maharshtra, 400601</p>
                    <p class="paras">Jaipur, Rajasthan, 302001</p>
                    <p class="paras">Gwalior, Madhya Pradesh, 474001</p>
                    <p class="paras">Trivandrum, Kerela, 695008</p>
                </div>
                <div class="col-12">
                    <hr class="light-100">
                    <h5 class="paras">&copy; raktDaan.com</h5>
                </div>
            </div>
        </div>
    </footer>

</body>

</html>