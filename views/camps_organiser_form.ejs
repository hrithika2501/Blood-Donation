    <section class="main">
        <div class="card">


            <div class="card-body text-center">
                <h2 class="font-weight-light register">Registeration form</h2>

                <form class="" action="/organiserForm/create" method="POST">


                    <div class="form">
                        <input style="margin-top: 15px;" type="text" class="form-control fontt"
                            placeholder="Name of organizer" name="Organizer_n">
                        <input style="margin-top: 15px;" type="text" class="form-control fontt"
                            placeholder="Name of organiztion" name="Organization_n">

                        <input style="margin-top: 15px;" type="email" class="form-control fontt" placeholder="Email-id"
                            name="email_id" aria-describedby="emailHelpBox">
                        <small id="emailHelpBox" class="form-text text-muted text-left">
                            This will be your username.
                        </small>
                        <input style="margin-top: 15px;" type="text" class="form-control fontt"
                            placeholder="Name of blood donation camp" name="Camp_n">
                        <div class="from  fontt">
                            <center>
                                <p style="margin-top: 15px;">Camp will be conducted from</p>
                            </center>
                        </div>
                        <div class="date">
                            <div class="form-check-inline fontt">
                                <input  type="date" class="form-control fontt"
                                    placeholder="Date" name="Start_date" id="date">
                            </div>
                        </div>


                        <div class="from fontt">
                            <center>
                                <p style="margin-top: 15px;">Camp ends on</p>
                            </center>
                        </div>
                        <div class="date">
                            <div class="form-check-inline fontt">
                                <input  type="date" class="form-control fontt"
                                    placeholder="Date" name="End_date" id="date">
                            </div>
                        </div>
                        <input style="margin-top: 15px;" type="text" class="form-control fontt" placeholder="Address"
                            name="Address" required>
                        <input style="margin-top: 15px;" type="text" class="form-control fontt" placeholder="City"
                            name="City" required>
                        <input style="margin-top: 15px;" type="text" class="form-control fontt" placeholder="Pincode"
                            name="Pincode" required>
                        <input style="margin-top: 15px;" type="text" class="form-control fontt" placeholder="State"
                            name="State" required>




                        <div class="form-group form-check">
                            <input style="margin-top: 20px;" type="checkbox" class="form-check-input fontt"
                                id="exampleCheck1" required>
                            <label style="margin-top: 15px;" class="form-check-label fontt" for="exampleCheck1">I agree
                                to the terms and
                                conditions</label>
                            <!-- <button class="btn btn-dark btn-sm form-control fontt" name="submit"> Register -->
                            <button style="margin-top: 15px;" class="btn btn-dark btn-sm form-control fontt"> Register
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>


